<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#121212">

    <!-- Judul Halaman -->
    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Catatan Keuangan"
        android:textSize="24sp"
        android:textColor="#FFD700"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Input Pendapatan -->
    <EditText
        android:id="@+id/edtPendapatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Pendapatan"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFD700"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />

    <!-- Input Pengeluaran -->
    <EditText
        android:id="@+id/edtPengeluaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Pengeluaran"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFD700"
        android:layout_marginBottom="16dp"
        android:padding="12dp" />

    <!-- Tombol Simpan -->
    <Button
        android:id="@+id/btnSimpanKeuangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:textColor="#000000"
        android:backgroundTint="#FFD700"
        android:layout_marginBottom="20dp"
        android:padding="12dp" />

    <!-- Tampilkan Total Keuangan -->
    <TextView
        android:id="@+id/txtTotalKeuangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: 0"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginTop="20dp" />
</LinearLayout>
